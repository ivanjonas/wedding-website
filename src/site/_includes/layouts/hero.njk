<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>{{ title }}</title>

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-68773216-3"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-68773216-3');
    </script>

  </head>
  <body {% if bodyClass %}class="{{ bodyClass }} l-page"{%else%}class="l-page"{% endif %}>

    {% include "header.njk" %}
    <main class="l-page-main">
      {{ content | safe }}
    </main>
    {% include "footer.njk" %}

    {% set js %}
      {% include "js/core.js" %}
    {% endset %}
    <script>{{ js | jsmin | safe }}</script>

  </body>
</html>
